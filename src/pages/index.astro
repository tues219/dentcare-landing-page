                    <button class="bg-orange-500 text-white text-xs py-2 px-3 rounded-xl font-medium">❓ ช่วยเหลือ</button>
                  </div>

                  <!-- User Message -->
                  <div class="flex justify-end">
                    <div class="bg-blue-500 text-white rounded-2xl rounded-tr-md p-3 max-w-[70%]">
                      <p class="text-sm">ขอดูนัดหมายหน่อยค่ะ</p>
                    </div>
