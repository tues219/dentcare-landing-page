          </div>
        </div>

        <!-- Right Content - App Mockup -->
        <div class="relative">
          <!-- Phone Frame -->
          <div class="relative mx-auto w-80 h-[600px] bg-gray-900 rounded-[3rem] p-2 shadow-2xl">
            <div class="w-full h-full bg-white rounded-[2.5rem] overflow-hidden relative">
              <!-- Status Bar -->
