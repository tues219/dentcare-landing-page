  homepage = await getEntry("homepage", "th-index");

  if (!homepage) {
    throw new Error("No Thai homepage content found.");
  }
} catch (error) {
  console.error("Failed to load Thai homepage:", error.message);
  return Response.redirect(Astro.url.origin + "/500", 500);
}
