---
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const entry = (await getEntry("faq", "-index")) as CollectionEntry<"faq">;
const { title, description, faqs } = entry?.data || {};

// Provide fallbacks if data is missing
const pageTitle = title || "FAQ";
const pageDescription = description || "Frequently Asked Questions";
---

<Base title={pageTitle} description={pageDescription}>
  <section class="section">
    <div class="container">
      <h1 class="text-center font-normal" set:html={markdownify(pageTitle)} />
      <div class="section row -mt-6">
        {
          faqs?.map((faq) => (
            <div class="col-12 mt-6 md:col-6">
              <div class="p-12  shadow">
                <div class="faq-head relative">
                  <h4 set:html={markdownify(faq.title)} />
                </div>
                <p class="faq-body mt-4" set:html={markdownify(faq.answer)} />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Base>
