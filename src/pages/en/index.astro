---
// src/pages/en/index.astro
import { Image } from "astro:assets";
import Base from "@/layouts/Base.astro";
import Cta from "@/layouts/components/Cta.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { getEntry } from "astro:content";
import type { CollectionEntry } from "astro:content";

let homepage: CollectionEntry<"homepage">;

try {
  homepage = await getEntry("homepage", "en-index");
} catch (error) {
  console.error("Failed to load en-index:", error);
  return Response.redirect(Astro.url.origin + "/", 302);
}

const { banner, feature, services, faq, contact_us } = homepage.data;

// Manually assign each feature item
const feature1 = feature.features[0];
const feature2 = feature.features[1];
const feature3 = feature.features[2];
const feature4 = feature.features[3];

const service1 = services[0];
const service2 = services[1];
---

<Base>
  <!-- banner -->
  <section
    class="relative min-h-[90vh] flex items-center justify-center text-left bg-gradient-to-b from-[#e3f2fd] to-[#5db0f3] overflow-hidden"
  >
    <div class="container mx-auto px-6 py-20">
      <div class="flex flex-col md:flex-row items-center gap-10 w-full">
        <!-- Left Side: Image -->
        <div class="w-full md:w-5/12">
          {
            banner?.image && (
              <Image
                class="absolute bottom-0 h-auto object-contain"
                src={banner?.image}
                width={300}
                height={700}
                alt="Banner Image"
              />
            )
          }
        </div>

        <!-- Right Side: Text -->
        <div class="w-full md:w-7/12">
          <div class="flex items-center gap-2">
            <h1
              class="font-primary text-4xl font-bold leading-tight md:text-5xl text-white"
            >
              {banner?.title}
            </h1>
            <p class="text-white text-lg font-bold">by DentCloud</p>
          </div>

          {
            banner?.content && (
              <h1
                class="mt-4 text-4xl text-white"
                set:html={markdownify(banner.content)}
              />
            )
          }

          {
            banner?.button?.enable && (
              <a
                class="flex h-full items-center justify-start mt-4"
                href="https://line.me/R/ti/p/@781qxigv"
              >
                <img src="/images/Line.png" alt="Logo" class="h-10 w-auto" />
              </a>
            )
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Features Main wrapper with one shared id for navigation -->
  <section id="features" class="w-full">
    <!-- Feature Section 1 -->
    <div
      class="min-h-[90vh] flex flex-col items-center justify-between text-center bg-gradient-to-b from-[#e3f2fd] to-[#5db0f3] px-6 py-20 relative overflow-hidden"
    >
      <div
        class="mx-auto -mt-6 my-8 px-8 py-4 bg-white rounded-full shadow-md inline-block whitespace-nowrap z-10"
      >
        <h3 class="font-primary text-xl md:text-3xl font-bold text-blue-600">
          {feature1?.title}
        </h3>
      </div>
      {
        feature1?.image && (
          <Image
            class="absolute bottom-0 mx-auto left-0 right-0 h-auto object-contain"
            src={feature1.image}
            width={300}
            height={700}
            alt="Feature 1"
          />
        )
      }

      {
        feature1?.content && (
          <div class="absolute bottom-0 z-10 w-full px-6 pb-6 text-center">
            <div class="container mx-auto">
              <p
                class="text-lg text-gray-900 font-extrabold"
                set:html={markdownify(feature1.content)}
              />
            </div>
          </div>
        )
      }
    </div>

    <!-- Feature Section 2 -->
    <div
      class="min-h-[90vh] flex flex-col items-center justify-between text-center bg-gradient-to-b from-[#e3f2fd] to-[#5db0f3] px-6 py-20 relative overflow-hidden"
    >
      <div
        class="mx-auto -mt-6 my-8 px-8 py-4 bg-white rounded-full shadow-md inline-block whitespace-nowrap z-10"
      >
        <h3 class="font-primary text-xl md:text-3xl font-bold text-blue-600">
          {feature2?.title}
        </h3>
      </div>
      {
        feature2?.image && (
          <Image
            class="absolute bottom-0 mx-auto left-0 right-0 h-auto object-contain"
            src={feature2.image}
            width={300}
            height={700}
            alt="Feature 2"
          />
        )
      }

      {
        feature2?.content && (
          <div class="absolute bottom-0 z-10 w-full px-6 pb-6 text-center">
            <div class="container mx-auto">
              <p
                class="text-lg text-gray-900 font-extrabold"
                set:html={markdownify(feature2.content)}
              />
            </div>
          </div>
        )
      }
    </div>

    <!-- Feature Section 3 -->
    <div
      class="min-h-[90vh] flex flex-col items-center justify-between text-center bg-gradient-to-b from-[#e3f2fd] to-[#5db0f3] px-6 py-20 relative overflow-hidden"
    >
      <div
        class="mx-auto -mt-6 my-8 px-8 py-4 bg-white rounded-full shadow-md inline-block whitespace-nowrap z-10"
      >
        <h3 class="font-primary text-xl md:text-3xl font-bold text-blue-600">
          {feature3?.title}
        </h3>
      </div>
      <Image
        src="/images/feature-3.1.png"
        width={250}
        height={400}
        class="absolute left-[240px] top-1/2 -translate-y-1/2 ml-6 object-contain z-0"
        alt="Static left image"
      />
      {
        feature3?.image && (
          <Image
            class="absolute bottom-0 mx-auto left-0 right-0 h-auto object-contain"
            src={feature3.image}
            width={300}
            height={700}
            alt="Feature 3"
          />
        )
      }

      {
        feature3?.content && (
          <div class="absolute bottom-0 z-10 w-full px-6 pb-6 text-center">
            <div class="container mx-auto">
              <p
                class="text-lg text-gray-900 font-extrabold"
                set:html={markdownify(feature3.content)}
              />
            </div>
          </div>
        )
      }
    </div>

    <!-- Feature Section 4 -->
    <div
      class="min-h-[90vh] flex flex-col items-center justify-between text-center bg-gradient-to-b from-[#e3f2fd] to-[#5db0f3] px-6 py-20 relative overflow-hidden"
    >
      <div
        class="mx-auto -mt-6 my-8 px-8 py-4 bg-white rounded-full shadow-md inline-block whitespace-nowrap z-10"
      >
        <h3 class="font-primary text-xl md:text-3xl font-bold text-blue-600">
          {feature4?.title}
        </h3>
      </div>
      <Image
        src="/images/feature-4.1.png"
        width={150}
        height={300}
        class="absolute left-[380px] top-1/2 -translate-y-1/2 ml-6 object-contain z-0"
        alt="Static left image"
      />
      {
        feature4?.image && (
          <Image
            class="absolute bottom-0 mx-auto left-0 right-0 h-auto object-contain"
            src={feature4.image}
            width={300}
            height={700}
            alt="Feature 4"
          />
        )
      }
      <Image
        src="/images/feature-4.2.png"
        width={150}
        height={320}
        class="absolute right-[380px] top-1/2 -translate-y-1/2 ml-6 object-contain z-0"
        alt="Static left image"
      />
      {
        feature4?.content && (
          <div class="absolute bottom-0 z-10 w-full px-6 pb-6 text-center">
            <div class="container mx-auto">
              <p
                class="text-lg text-gray-900 font-extrabold"
                set:html={markdownify(feature4.content)}
              />
            </div>
          </div>
        )
      }
    </div>
  </section>

  <!-- Services -->
  <section id="services" class="w-full">
    <div
      class="min-h-[90vh] flex flex-col items-center justify-between text-center bg-gradient-to-b from-[#e3f2fd] to-[#5db0f3] px-6 py-20 relative overflow-hidden"
    >
      <div class="container mx-auto z-10">
        <h3 class="font-primary text-xl md:text-4xl font-bold text-gray-900">
          {service1.title}
        </h3>
        <br />
        <p
          class="text-2xl text-gray-900 font-medium"
          set:html={service1.content}
        />
      </div>

      <div class="flex justify-center items-center gap-8 px-6 py-10">
        <Image
          src={service1.images[0]}
          alt="Left Image"
          width={250}
          height={400}
          class="object-contain"
        />
        <Image
          src={service1.images[1]}
          alt="Middle Image"
          width={250}
          height={400}
          class="object-contain"
        />
        <Image
          src={service1.images[2]}
          alt="Right Image"
          width={250}
          height={400}
          class="object-contain"
        />
      </div>
    </div>

    <div
      class="min-h-[90vh] flex flex-col items-center justify-between text-center bg-gradient-to-b from-[#e3f2fd] to-[#5db0f3] px-6 py-20 relative overflow-hidden"
    >
      <div class="container mx-auto px-6 py-20">
        <div class="flex flex-col md:flex-row items-center gap-10 w-full">
          <!-- Left Side: Image -->
          <div class="w-full md:w-6/12">
            <Image
              class="absolute left-[140px] top-1/2 -translate-y-1/2 ml-6 object-contain z-0 shadow-none"
              src={service2?.images[0]}
              width={300}
              height={700}
              alt="Banner Image"
            />
          </div>

          <!-- Right Side: Text -->
          <div class="w-full md:w-8/12">
            <div
              class="mt-6 bg-white rounded-2xl shadow-md p-6 w-auto max-w-md self-start"
            >
              <h2 class="mt-6 text-2xl text-left font-semibold text-gray-800">
                {service2.title}
              </h2>
              <ul class="mt-6 space-y-4 text-left">
                <li
                  class="flex items-start gap-6 border-b border-gray-200 pb-2"
                >
                  <img
                    src="/images/icon1.png"
                    alt="check"
                    class="w-6 h-6 mt-1"
                  />
                  <span class="text-lg text-gray-800 font-medium"
                    >คลินิกทันตกรรมไบร์ทไชน์</span
                  >
                </li>
                <li
                  class="flex items-start gap-6 border-b border-gray-200 pb-2"
                >
                  <img
                    src="/images/icon2.png"
                    alt="check"
                    class="w-6 h-6 mt-1"
                  />
                  <span class="text-lg text-gray-800 font-medium"
                    >คลินิกทันตกรรมเดนทัล888</span
                  >
                </li>
                <li
                  class="flex items-start gap-6 border-b border-gray-200 pb-2"
                >
                  <img
                    src="/images/icon3.png"
                    alt="check"
                    class="w-6 h-6 mt-1"
                  />
                  <span class="text-lg text-gray-800 font-medium"
                    >คลินิกทันตกรรมแน่นมาก</span
                  >
                </li>
                <li
                  class="flex items-start gap-6 border-b border-gray-200 pb-2"
                >
                  <img
                    src="/images/icon4.png"
                    alt="check"
                    class="w-6 h-6 mt-1"
                  />
                  <span class="text-lg text-gray-800 font-medium"
                    >คลินิกทันตกรรมงั่มงั่ม</span
                  >
                </li>
                <li class="flex items-start gap-6">
                  <img
                    src="/images/icon5.png"
                    alt="check"
                    class="w-6 h-6 mt-1"
                  />
                  <span class="text-lg text-gray-800 font-medium"
                    >คลินิกทันตกรรมกุ๊กไก่</span
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- /End service -->

  <section id="faq" class="w-full">
    <div
      class="min-h-[90vh] flex flex-col items-center text-center bg-gradient-to-b from-[#e3f2fd] to-[#5db0f3] px-6 py-20 relative overflow-hidden"
    >
      <div class="container mx-auto px-4 md:px-8 flex justify-center">
        <ul
          class="bg-white rounded-2xl shadow-lg w-full max-w-4xl text-left divide-y divide-gray-200"
        >
          <!-- FAQ Title inside white box -->
          <li class="px-6 py-5">
            <h2 class="text-3xl font-bold text-gray-500">FAQ</h2>
          </li>
          {
            faq?.map((item, index) => (
              <li
                class="faq-item px-6 py-4 cursor-pointer group"
                data-index={index}
              >
                <div class="flex justify-between items-center">
                  <span class="font-semibold text-gray-800">{item.title}</span>
                  <img
                    src="/images/triangle.svg"
                    class="icon w-4 h-4 transition-transform duration-300"
                  />
                </div>
                <div class="faq-answer mt-2 text-gray-700 hidden">
                  {item.content}
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </section>

  <!-- Contact Us -->
  <section id="contact" class="w-full">
    <div
      class="min-h-[90vh] flex flex-col items-center justify-between text-center bg-gradient-to-b from-[#e3f2fd] to-[#5db0f3] px-6 py-20 relative overflow-hidden"
    >
      <div class="container mx-auto w-full max-w-5xl flex flex-col gap-6">
        <!-- 🔵 First Box (LINE Add Friend) -->
        <div
          class="bg-[#2196f3] text-white rounded-2xl px-6 py-6 flex flex-col md:flex-row items-center justify-between text-left shadow-md"
        >
          <div class="md:w-8/12">
            <h2
              class="text-xl md:text-2xl text-white font-bold"
              set:html={contact_us.title}
            />
          </div>
          <div class="mt-4 md:mt-0 md:w-4/12 flex items-center justify-center">
            <div class="flex flex-col items-center">
              <a href="https://line.me/R/ti/p/@781qxigv">
                <img
                  src={contact_us.image}
                  alt="Add Friend"
                  class="h-12 md:h-14 w-auto"
                />
              </a>

              <h3 class="mt-6 text-white font-semibold">น้องฟัน</h3>
            </div>
          </div>
        </div>

        <!-- ⚪ Second Box (Contact Info + Map) -->
        <div
          class="bg-white text-left rounded-2xl px-6 py-6 flex flex-col md:flex-row items-center justify-between shadow-md"
        >
          <div>
            <h2 class="text-blue-600 text-xl md:text-2xl font-bold mb-2">
              contact us
            </h2>
            <h3 class="text-lg text-blue-500">line: @dentcare</h3>
            <h3 class="text-lg text-blue-500">
              email: dentcare.official@gmail.com
            </h3>
          </div>
          <img
            src="/images/map.png"
            alt="Map"
            class="w-32 h-32 object-cover rounded-lg mt-4 md:mt-0"
          />
        </div>
      </div>
    </div>

    <div
      class="min-h-[90vh] flex flex-col items-center justify-between text-center bg-gradient-to-b from-[#e3f2fd] to-[#5db0f3] px-6 py-20 relative overflow-hidden"
    >
      <div class="flex items-center gap-3">
        <img
          src="/images/logo.png"
          alt="Logo 1"
          class="w-40 h-40 object-contain"
        />
        <span class="text-xl font-semibold text-white mx-4">By</span>
        <img
          src="/images/dentcloud.png"
          alt="Logo 2"
          class="w-40 h-40 object-contain"
        />
      </div>

      <div
        class="bg-[#2196f3] text-white rounded-2xl px-6 py-6 flex flex-col md:flex-row items-center justify-between text-left shadow-md"
      >
        <div>
          <h2 class="text-white text-xl md:text-2xl font-bold mb-2">
            Get to know DentCloud better
          </h2>
          <h3 class="text-white text-xl md:text-2xl font-bold">
            DentCloud is a dental clinic management system used by over 1,800
            clinics nationwide. <br />
            We stand behind the clinics you trust.
          </h3>
        </div>
      </div>
      <p class="bottom-0 w-full text-sm text-gray-900 mb-1">
        © 2025 DentCloud Co., Ltd. | All rights reserved <br /> Privacy Policy |
        Contact the team
      </p>
    </div>
  </section>
</Base>

<script>
  import { Swiper } from "swiper";
  import "swiper/css";
  import "swiper/css/pagination";
  import { Autoplay, Pagination } from "swiper/modules";

  document.addEventListener("astro:page-load", () => {
    new Swiper(".service-carousel .swiper", {
      modules: [Pagination, Autoplay],
      pagination: {
        type: "bullets",
        el: ".service-carousel .pagination",
        clickable: true,
      },
    });
  });

  document.addEventListener("DOMContentLoaded", () => {
    const items = document.querySelectorAll(".faq-item");

    items.forEach((item) => {
      item.addEventListener("click", () => {
        const answer = item.querySelector(".faq-answer");
        const icon = item.querySelector(".icon");

        const isOpen = !answer.classList.contains("hidden");

        // Close all answers
        items.forEach((el) => {
          el.querySelector(".faq-answer").classList.add("hidden");
          el.querySelector(".icon").classList.remove("rotate-180");
        });

        // Toggle clicked answer
        if (!isOpen) {
          answer.classList.remove("hidden");
          icon.classList.add("rotate-180");
        }
      });
    });
  });
</script>
